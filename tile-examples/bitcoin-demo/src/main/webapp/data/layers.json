{
    "ServerLayers": [
		{
			"layer": "bitcoin.time.amount",
			"type": "tile",
			"transform": "log10",
			"ramp": "ware",
			"opacity": 0.85,

			"axis": [
				{
		        	"title" : "Time",
					"position" : "bottom",
		        	"repeat": false,	
		        	"intervalSpec" : {
		            	"type" : "percentage",
		            	"increment" : 20,
		            	"pivot" : 0,
		            	"allowScaleByZoom" : true
		        	},
		        	"unitSpec" : {
		            	"type" : "time",
		            	"decimals" : 2,
		            	"allowStepDown" : false
		        	},
		        	"style": {	
						"majorMarkerLength" : 10,
						"majorMarkerWidth" : 1,
						"majorMarkerColour" : "#7E7E7E",
						"markerLabelColour" : "#7E7E7E",
			            "markerLabelFontSize" : "0.75em",
			            "markerLabelRotation" : -45,
						"axisLabelColour" : "#7E7E7E",
			            "axisLabelFontSize" : "0.95em",  
						"fontFamily" : "Tahoma, Verdana, Segoe, sans-serif"
					}	
		    	},
		    	{
		        	"title" : "Amount (BTC)",
		        	"position" : "left",
		        	"repeat": false,
		        	"intervalSpec" : {
		            	"type" : "fixed",
		            	"increment" : 100000,
		            	"pivot" : 0,
		            	"allowScaleByZoom" : true
		        	},
		        	"unitSpec" : {
		            	"type" : "decimal",
		            	"decimals" : 2,
		            	"allowStepDown" : false
		        	},
		        	"style": {
			        	"position" : "left",
			        	"repeat" : false,		
						"majorMarkerLength" : 10,
						"majorMarkerWidth" : 1,
						"majorMarkerColour" : "#7E7E7E",
						"markerLabelColour" : "#7E7E7E",
						"markerLabelFontSize" : "0.75em",
						"axisLabelColour" : "#7E7E7E",
						"axisLabelFontSize" : "0.95em",
						"fontFamily" : "Tahoma, Verdana, Segoe, sans-serif"
					}
	    		}
	    	]
		}
	],
	"ClientLayers": [],
	"AnnotationLayers": [
		{
			"layer": "bitcoin.annotations",
			"filters" : [{
				"priority": "P0",
				"count":10
			}]
		}
	]
}