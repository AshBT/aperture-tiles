<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>dist</id>
    <formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>

    <files>
        <file>
            <source>src/bin/spark-run.sh</source>
            <outputDirectory>bin</outputDirectory>
            <destName>spark-run.sh</destName>
            <fileMode>755</fileMode>
        </file>
    </files>

	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>com.oculusinfo:tile-generation:jar:0.3-SNAPSHOT</include>
			   	<include>com.oculusinfo:binning-utilities:jar:0.3-SNAPSHOT</include>	
                <include>org.apache.hbase:hbase:jar:${hbase-version}</include>
                <include>org.scala-lang:scala-library:jar:${scala-version}</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
